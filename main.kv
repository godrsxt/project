<TypingTest>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    Label:
        id: target_label
        text: "Press 'Start Test' to begin"
        size_hint_y: 0.2
        font_size: '20sp'

    TextInput:
        id: input_field
        multiline: False
        size_hint_y: 0.2
        font_size: '20sp'
        disabled: True
        on_text: root.on_text_change(self, self.text)

    Label:
        id: stats_label
        text: "WPM: 0 | Accuracy: 0%"
        size_hint_y: 0.2

    Button:
        id: start_button
        text: "Start Test"
        size_hint_y: 0.2
        on_press: root.start_test(self)
