# Root container: BoxLayout for vertical arrangement
BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    # Header Label
    Label:
        text: 'Python to APK Converter'
        font_size: '24sp'
        size_hint_y: None
        height: 40

    # Python File Selection Section
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'Python File:'
            size_hint_x: None
            width: 120
        TextInput:
            id: python_file_input
            text: root.python_file
            size_hint_x: None
            width: 400
        Button:
            text: 'Browse'
            on_press: root.browse_python_file()

    # Output Directory Selection Section
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'Output Directory:'
            size_hint_x: None
            width: 120
        TextInput:
            id: output_dir_input
            text: root.output_dir
            size_hint_x: None
            width: 400
        Button:
            text: 'Browse'
            on_press: root.browse_output_dir()

    # App Icon Selection Section
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'App Icon:'
            size_hint_x: None
            width: 120
        TextInput:
            id: icon_input
            text: root.icon_path
            size_hint_x: None
            width: 400
        Button:
            text: 'Browse'
            on_press: root.browse_icon()

    # App Name Input
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'App Name:'
            size_hint_x: None
            width: 120
        TextInput:
            id: app_name_input
            text: root.app_name
            size_hint_x: None
            width: 400

    # Package Name Input
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        Label:
            text: 'Package Name:'
            size_hint_x: None
            width: 120
        TextInput:
            id: package_name_input
            text: root.package_name
            size_hint_x: None
            width: 400

    # Progress Bar
    ProgressBar:
        id: progress_bar
        size_hint_y: None
        height: 30
        max: 100
        value: 0

    # Convert Button
    Button:
        text: 'Convert to APK'
        size_hint_y: None
        height: 40
        on_press: root.convert_to_apk()

    # Log Area (Text Output)
    ScrollView:
        size_hint: (1, None)
        size_hint_y: 0.4
        TextInput:
            id: log_area
            text: ''
            readonly: True
            height: self.minimum_height
            font_size: '14sp'
            size_hint_y: None